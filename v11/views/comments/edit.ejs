<%- include ("../partials/header") -%>
<div class="container">
    <h3 style="text-align: center;">Edit Comment to <%= campground.name %></h3>
    <div style="width: 45%; margin: 20px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="post">
            <div class="form-group"><input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>"></input></div>
            <div class="form-group"><button class="btn-nom btn btn-primary btn-lg btn-block">Update</button></div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<%- include ("../partials/footer") -%>