<%- include ("../partials/header") -%>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 class="display-4">Welcome To BongoCamp!</h1>
            <p class="lead">View our hand-picked campgrounds from all over Tanzania</p>
            <p>
                <a class="btn btn-outline-primary btn-large" href="/campgrounds/new">Add new Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campGrounds.forEach(function(campground){ %>
        <div class="col-lg-4 col-md-4 col-sm-6">
            <div class="card mt-2">
                <img class="card-img-top" src="<%= campground.image %>" alt="">
                <div class="card-title mt-2 mb-0">
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-sm btn-outline-primary mb-2">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>

</div>
<%- include ("../partials/footer") -%>